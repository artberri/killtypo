{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        "username": {
          ".validate": "!root.child('usernames').child(newData.val()).exists() || root.child('usernames').child(newData.val()).val() == $uid"
        },
        "email": {
          ".read": "$uid === auth.uid"
        },
        "lastLoginAt": {
          ".read": "$uid === auth.uid"
        },
        "registeredAt": {
          ".read": "$uid === auth.uid"
        }
      }
    },
    "usernames": {
      "$username": {
        ".read": false,
        ".write": "!data.exists()",
        ".validate": "newData.val() === auth.uid"
      }
    }
  }
}
